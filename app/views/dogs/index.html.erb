
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">My Pets</h1>
  </div>
  <div class="span12">
  <% @dogs.each do |dog| %>
      <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <%= dog.name %>
        <%= link_to dog do %>
          <%= image_tag dog.avatar_url(:thumb), class: "img-responsive", class: "small"%>
        <% end %>
      </div>
  <% end %>       
  </div>
</div>     

<br>

<%= link_to 'Add a new member', new_dog_path, :class => "btn btn-small btn-primary" %>