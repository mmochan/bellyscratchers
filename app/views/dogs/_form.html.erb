<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>


<div class="row form-inputs">
  <div class="row col-sm-12 col-md-8 col-lg-8">
    <%= f.input :name %>
    <%= f.input :sex %>
    <%= image_tag(@dog.avatar_url) if @dog.avatar? %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
</div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-small btn-primary" %>
  </div>
<% end %>