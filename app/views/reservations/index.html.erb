

<h1>Your Reservations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Who's coming</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.name %></td>
        <% reservation.dogs.each do |pic| %>
          <td><%= image_tag pic.avatar_url :tiny %></td>
        <% end %>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path, :class => "btn btn-small btn-primary" %>